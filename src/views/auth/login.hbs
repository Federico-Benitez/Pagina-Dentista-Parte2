<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header">
                    <div class="text-center">
                        <h3>Iniciar Sesión</h3>
                    </div>
                </div>
                <div class="card-body">
                    <form action="/login" method="POST">
                        <form-group>
                            Email:<input type="email" class="form-control" name="email" placeholder="Ingrese su email">
                        </form-group>
                        <p></p>
                        <form-group>
                            Contraseña:<input type="password" class="form-control" name="password"
                                placeholder="Ingrese su clave">
                        </form-group>
                        <p></p>
                        <form-group>
                            <input class="btn btn-primary btn-block" type="submit" value="Acceder">
                        </form-group>

                    </form>
                    <form action="/signup" method="get">
                        <form-group>
                            No posee una cuenta?
                            <input class="btn btn-info btn-block" type="submit" value="Registrarse">
                        </form-group>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>